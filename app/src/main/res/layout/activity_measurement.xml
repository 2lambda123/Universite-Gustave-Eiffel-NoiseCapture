<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="org.orbisgis.protonomap.Measurement"
    android:layout_alignParentTop="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@+id/linearLayout"
        android:id="@+id/linearLayout2"
        android:weightSum="1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center_vertical"
            android:id="@+id/linearLayout3"
            android:weightSum="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100.0"
                android:id="@+id/textView_value_SL_i"
                android:textSize="60dp"
                android:paddingRight="20dp"
                android:layout_marginBottom="0dp"
                android:layout_marginTop="-5dp" />

            <FrameLayout
                android:layout_width="fill_parent"
                android:layout_height="61dp">

                <TextView
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:text="100.0"
                    android:id="@+id/textView_value_Min_i"
                    android:layout_gravity="left|bottom"
                    android:textSize="15dp"
                    android:gravity="center"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:text="100.0"
                    android:id="@+id/textView_value_Mean_i"
                    android:layout_gravity="center_horizontal|bottom"
                    android:textSize="15dp"
                    android:gravity="center"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:text="100.0"
                    android:id="@+id/textView_value_Max_i"
                    android:layout_gravity="right|bottom"
                    android:textSize="15sp"
                    android:gravity="center"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:text="Max"
                    android:id="@+id/textView_title_Max_i"
                    android:layout_gravity="right|center_vertical"
                    android:textSize="15sp"
                    android:gravity="center"
                    android:paddingTop="6dp" />

                <TextView
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:text="Mean"
                    android:id="@+id/textView_title_Mean_i"
                    android:layout_gravity="center"
                    android:textSize="15dp"
                    android:gravity="center"
                    android:paddingTop="6dp" />

                <TextView
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:text="Min"
                    android:id="@+id/textView_title_Min_i"
                    android:layout_gravity="left|center_vertical"
                    android:textSize="15dp"
                    android:gravity="center"
                    android:paddingTop="6dp" />

                <Chronometer
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/chronometer_recording_time"
                    android:layout_gravity="right|top"
                    android:format="00:00:00"
                    android:text="00:00:00"
                    android:textColor="#0099CC"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:gravity="center" />

                <TextView
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:text="@string/SL_dBA"
                    android:id="@+id/textView9"
                    android:layout_gravity="left|top"
                    android:textColor="#0099CC"
                    android:textSize="15dp"
                    android:gravity="center"
                    android:paddingTop="4dp" />

            </FrameLayout>

        </LinearLayout>

        <com.github.mikephil.charting.charts.HorizontalBarChart
            android:id="@+id/vumeter"
            android:layout_width="wrap_content"
            android:layout_height="57dp"
            android:layout_below="@+id/textView_value_iSL" />

        <com.github.mikephil.charting.charts.BarChart
            android:id="@+id/spectrumChart"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_above="@+id/linearLayout"
            android:layout_below="@+id/vumeter" />

    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/linearLayout">

        <ImageButton android:id="@+id/recordBtn"
            android:layout_width="64dip"
            android:layout_height="64dip"
            android:src="@drawable/button_record"
            android:scaleType="fitCenter"
            android:background="#00000000" />

        <ImageButton android:id="@+id/cancelBtn"
            android:layout_width="64dip"
            android:layout_height="64dip"
            android:src="@drawable/button_cancel_disabled"
            android:scaleType="fitCenter"
            android:background="#00000000" />

        <ImageButton android:id="@+id/exportBtn"
            android:layout_width="64dip"
            android:layout_height="64dip"
            android:src="@drawable/button_export_disabled"
            android:scaleType="fitCenter"
            android:background="#00000000"
            android:visibility="invisible" />

        <ImageButton android:id="@+id/historyBtn"
            android:layout_width="64dip"
            android:layout_height="64dip"
            android:src="@drawable/button_history"
            android:scaleType="fitCenter"
            android:background="#00000000" />

    </LinearLayout>

</RelativeLayout>

    <ListView android:id="@+id/left_drawer"
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:choiceMode="singleChoice"
        android:divider="@android:color/transparent"
        android:dividerHeight="0dp"
        android:background="#111"/>

</android.support.v4.widget.DrawerLayout>