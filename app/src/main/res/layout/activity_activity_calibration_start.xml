<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="org.orbisgis.protonomap.activity_calibration_start">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/title_select_calibration_mode"
            android:id="@+id/textView_select_calibration_mode"
            android:textSize="15dp"
            android:textColor="#0099CC"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:gravity="center_horizontal" />

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/spinner_calibration_mode"
            android:layout_below="@+id/textView_select_calibration_mode"
            android:paddingBottom="0dp"
            android:gravity="center_horizontal"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:textAlignment="center" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Calibration duration (s)"
            android:id="@+id/textView_calibration_duration"
            android:layout_below="@+id/spinner_calibration_mode"
            android:layout_centerHorizontal="true"
            android:textColor="#0099CC"
            android:textSize="15dp" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/editText"
            android:layout_below="@+id/textView_calibration_duration"
            android:layout_alignLeft="@+id/textView_calibration_duration"
            android:layout_alignStart="@+id/textView_calibration_duration"
            android:layout_alignRight="@+id/textView_select_calibration_mode"
            android:layout_alignEnd="@+id/textView_select_calibration_mode"
            android:text="10"
            android:gravity="center_horizontal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Calibration delay (s)"
            android:id="@+id/textView_title_calibration_delay"
            android:textColor="#0099CC"
            android:textSize="15dp"
            android:paddingTop="15dp"
            android:textAlignment="center"
            android:gravity="center_horizontal"
            android:layout_column="4"
            android:layout_below="@+id/editText"
            android:layout_centerHorizontal="true" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/editText_calibration_delay"
            android:editable="true"
            android:text="5"
            android:textAlignment="center"
            android:gravity="center_horizontal"
            android:layout_below="@+id/textView_title_calibration_delay"
            android:layout_alignLeft="@+id/editText"
            android:layout_alignStart="@+id/editText"
            android:layout_alignRight="@+id/editText"
            android:layout_alignEnd="@+id/editText" />

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/progressBar2"
            android:paddingTop="20dp"
            android:layout_below="@+id/editText_calibration_delay"
            android:layout_centerHorizontal="true" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Start"
            android:id="@+id/button_start_calibration"
            android:layout_toLeftOf="@+id/progressBar2"
            android:layout_toStartOf="@+id/progressBar2"
            android:background="@color/R1_SL_level"
            android:layout_alignParentBottom="true" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:id="@+id/button_cancel_calibration"
            android:layout_alignBottom="@+id/button_start_calibration"
            android:layout_toRightOf="@+id/progressBar2"
            android:layout_toEndOf="@+id/progressBar2"
            android:background="@color/R3_SL_level"
            android:textColor="@android:color/black"
            android:layout_alignParentBottom="true" />

    </RelativeLayout>

    <ListView
    android:id="@+id/left_drawer"
    android:layout_width="@dimen/list_view_layout_width"
    android:layout_height="@dimen/list_view_layout_height"
    android:layout_gravity="start"
    android:choiceMode="singleChoice"
    android:divider="@android:color/transparent"
    android:dividerHeight="0dp"
    android:background="#111"/>

</android.support.v4.widget.DrawerLayout>
