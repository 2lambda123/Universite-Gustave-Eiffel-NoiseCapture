    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_calibration_menu"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context="org.noise_planet.noisecapture.CalibrationMenu">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/linearLayout"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_centerHorizontal="true"
            android:orientation="vertical"
            android:weightSum="3">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:paddingBottom="8dp"
                android:layout_weight="1">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:onClick="onManualCalibration"
                    app:srcCompat="@drawable/calibration"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:paddingBottom="8dp"
                android:layout_weight="1">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:onClick="onManualCalibration"
                    app:srcCompat="@drawable/calibration2"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:paddingBottom="8dp"
                android:layout_weight="1">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:onClick="onAutoCalibration"
                    app:srcCompat="@drawable/calibration3"/>
            </LinearLayout>


        </LinearLayout>

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_centerHorizontal="true"
            android:orientation="vertical"
            android:weightSum="3">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="vertical"
                android:paddingBottom="8dp"
                android:layout_weight="1">

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/calibration_reference"
                        android:textColor="@color/flashy_green"
                        android:textStyle="bold"
                        android:gravity="start"
                        android:paddingTop="8dp"
                        android:paddingLeft="40dp"
                        android:paddingRight="5dp"
                        android:textSize="16sp" />
                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/manual_calibration"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:paddingBottom="8dp"
                        android:gravity="center"
                        android:textSize="20sp" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="vertical"
                android:paddingBottom="8dp"
                android:layout_weight="1">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/calibration_noise_calibrator"
                    android:textColor="@color/flashy_green"
                    android:textStyle="bold"
                    android:gravity="center|left"
                    android:paddingTop="40dp"
                    android:paddingLeft="40dp"
                    android:paddingRight="5dp"
                    android:textSize="16sp" />
                <Space
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/manual_calibration"
                    android:textColor="@color/white"
                    android:paddingBottom="8dp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:textSize="20sp" />
            </LinearLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal"
                android:paddingBottom="8dp"
                android:layout_weight="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/calibration_reference"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:gravity="start|bottom"
                    android:paddingLeft="30dp"
                    android:paddingBottom="40dp"
                    android:textSize="15sp" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/auto_calibration"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:gravity="center|bottom"
                    android:paddingBottom="8dp"
                    android:textSize="20sp" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/calibration_guest"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:paddingRight="30dp"
                    android:paddingBottom="40dp"
                    android:gravity="bottom|right"
                    android:textSize="15sp" />
            </RelativeLayout>

        </LinearLayout>
    </RelativeLayout>

    <ListView
        android:id="@+id/left_drawer"
        android:layout_width="@dimen/list_view_layout_width"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:background="#111"
        android:choiceMode="singleChoice"
        android:divider="@android:color/transparent"
        android:dividerHeight="0dp" />
</android.support.v4.widget.DrawerLayout>